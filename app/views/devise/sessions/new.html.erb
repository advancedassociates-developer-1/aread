<div class="fakebody text-center">
  <main class="form-signin w-100 m-auto">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <img src="<%= "#{BROWN_BUCKET_HOST}/logo-faded.png" %>" alt="" width="122">
      <div class="mb-4"><%= BROWN_NAME_PARENTHESIS %></div>
      <!--<div class="zh5 mb-3 zfw-normal">Please sign in</div>-->
      <br>

      <div class="form-floating text-start">
        <%= f.email_field :email, autofocus: true, autocomplete: "brown-email", class: 'form-control' %>
        <%= f.label :email %>
      </div>
      <div class="form-floating text-start">
        <%= f.password_field :password, class: 'form-control', autocomplete: "brown-password", placeholder: 'Password' %>
        <%= f.label :password %>
      </div>

      <div class="checkbox mb-3">
	<label>
          <input class="hotfix100" type="checkbox" value="remember-me"> Remember me
	</label>
      </div>
      <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
      <br><br><br>
      <p class="mt-5 mb-3 text-muted">&copy; 2022</p>
    <% end %>
  </main>
</div>

<style>
  /* derived from https://getbootstrap.com/docs/5.2/examples/sign-in/ */
  html,
  .fakebody, body {
    height: 100%;
  }
  
  .fakebody {
    display: flex;
    align-items: center;
    padding-top: 40px;
    padding-bottom: 40px;
    background-color: #f5f5f5;
  }
  
  .form-signin {
    max-width: 330px;
    padding: 15px;
  }
  
  .form-signin .form-floating:focus-within {
    z-index: 2;
  }
  
  .form-signin input[type="email"] {
    margin-bottom: -1px;
    border-bottom-right-radius: 0;
    border-bottom-left-radius: 0;
  }
  
  .form-signin input[type="password"] {
    margin-bottom: 10px;
    border-top-left-radius: 0;
    border-top-right-radius: 0;
  }
</style>


<style>
