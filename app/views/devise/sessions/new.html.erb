<%= spacer(100) %>

<div class="text-center">
  <main class="form-signin w-100 m-auto">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-floating text-start">
        <%= f.email_field :email, autofocus: true, autocomplete: "brown-email",
	    class: 'form-control', placeholder: 'Email', value: BROWN_FIRST_USER_EMAIL %>
        <%= f.label :email %>
      </div>
      <div class="form-floating text-start">
        <%= f.password_field :password, class: 'form-control', autocomplete: "brown-password",
	    placeholder: 'Password' %>
        <%= f.label :password %>
      </div>

      <div class="checkbox mb-3">
        <label>
          <input class="hotfix100" type="checkbox" value="remember-me"> Remember me
        </label>
      </div>
      <button class="w-100 btn btn-primary" type="submit">Sign in</button>

      <div class="mt-5">
        Forgot password?
        Contact <%= BROWN_SUPPORT_NAME %> <%= BROWN_SUPPORT_PHONE %> for assistance.
      </div>
    <% end %>
  </main>
</div>
